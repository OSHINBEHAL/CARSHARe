<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#f7584f" />
            <gradient android:angle="-90" android:startColor="#f9483e" android:endColor="#fc7d76"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#f7584f" />
            <solid android:color="#fc7d76"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#f9483e" />
            <gradient android:angle="-90" android:startColor="#fc7d76" android:endColor="#f9483e" />
        </shape>
    </item>
</selector>
