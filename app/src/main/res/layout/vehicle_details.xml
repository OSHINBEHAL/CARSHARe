<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bitmap"
    android:orientation="vertical">

    <TextView
        android:id="@+id/VehicleDetails"
        android:layout_width="wrap_content"
        android:layout_height="35sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginLeft="6sp"
        android:layout_marginRight="6sp"
        android:layout_marginTop="20sp"
        android:background="@drawable/my_button_heading"
        android:gravity="center"
        android:text=" Vehicle Details Please "
        android:textColor="#ffff"
        android:textSize="28sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20sp"
        android:orientation="vertical"
        android:paddingLeft="30sp"
        android:paddingRight="20sp"
        android:weightSum="6">

        <EditText
            android:id="@+id/edtVehicleName"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_marginBottom="15sp"
            android:layout_weight="1"
            android:background="#eae8e8"
            android:gravity="center"
            android:hint="Enter Vehicle name"

            android:textSize="18sp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/edtRegNo"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_marginBottom="15sp"
            android:layout_weight="1"
            android:background="#eae8e8"
            android:gravity="center"
            android:hint="Enter Registration Number"

            android:textSize="17sp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/edtDVnumber"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:background="#eae8e8"
            android:gravity="center"
            android:hint="Enter Driving License number"
            android:textSize="17sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30sp"
            android:background="@drawable/my_button_purple"
            android:text="DONE"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>