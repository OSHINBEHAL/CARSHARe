<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bitmap"
    android:orientation="vertical"
    android:weightSum="9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10sp"
        android:paddingRight="10sp">

        <TextView
            android:id="@+id/DriverTripDetails"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:background="@drawable/my_button_heading"
            android:gravity="center"
            android:text=" TRIP DETAILS "
            android:textColor="#ffffff"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15sp"
        android:paddingRight="15sp"
        android:paddingTop="15sp"
        android:weightSum="2">

        <TextView
            android:id="@+id/startLoctn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="34sp"
            android:layout_weight="2"
            android:background="@drawable/my_button_gray"
            android:gravity="center"
            android:text="From"
            android:textColor="#ffff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/fromspinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        </Spinner>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:paddingTop="10sp"
        android:weightSum="2">

        <TextView
            android:id="@+id/EndLoctn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40sp"
            android:layout_weight="2"
            android:background="@drawable/my_button_gray"
            android:gravity="center"
            android:text="To"
            android:textColor="#ffff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/tospinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"></Spinner>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:paddingTop="10sp"
        android:weightSum="2">

        <TextView
            android:id="@+id/Date"
            android:layout_width="44sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/my_button_gray"
            android:gravity="center"
            android:text="Date"
            android:textColor="#ffff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9sp"
            android:layout_weight="1"
            android:background="#e8e8e8"
            android:gravity="center"
            android:hint="Date of journey"
            android:textSize="20sp"
            android:textStyle="italic" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:paddingTop="10sp"
        android:weightSum="2">

        <TextView
            android:id="@+id/StartTime"
            android:layout_width="8sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/my_button_gray"
            android:gravity="center"
            android:text="Start Time"
            android:textColor="#ffff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtStartTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9sp"
            android:layout_weight="1"
            android:background="#e8e8e8"
            android:gravity="center"
            android:hint="Start Time"
            android:textSize="20sp"
            android:textStyle="italic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:paddingTop="10sp"
        android:weightSum="2">

        <TextView
            android:id="@+id/EndTime"
            android:layout_width="8sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/my_button_gray"
            android:gravity="center"
            android:text="End Time"
            android:textColor="#ffff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtEndTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9sp"
            android:layout_weight="1"
            android:background="#e8e8e8"
            android:gravity="center"
            android:hint="End Time"
            android:textSize="20sp"
            android:textStyle="italic" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:paddingTop="10sp"
        android:weightSum="1">

        <EditText
            android:id="@+id/edtseats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9sp"
            android:layout_weight="1"
            android:background="#e8e8e8"
            android:gravity="center"
            android:hint="Seats Available"
            android:textSize="20sp"
            android:textStyle="italic" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:paddingTop="10sp"
        android:weightSum="1">


        <EditText
            android:id="@+id/edtFare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9sp"
            android:layout_weight="1"
            android:background="#e8e8e8"
            android:gravity="center"
            android:hint="Fare per Co-Traveller"
            android:textSize="20sp"
            android:textStyle="italic" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:paddingTop="5sp">

        <Button
            android:id="@+id/btn1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10sp"
            android:background="@drawable/my_button_purple"
            android:text=" SUBMIT "
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>