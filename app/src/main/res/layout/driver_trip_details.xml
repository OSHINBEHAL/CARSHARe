<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="9">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bitmap" />

    <TextView
        android:id="@+id/DriverTripDetails"
        android:layout_width="wrap_content"
        android:layout_height="35sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:background="@drawable/my_button_red"
        android:gravity="center"
        android:text=" TRIP DETAILS "
        android:textColor="#f9ef20"
        android:textSize="30sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/startLoctn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/DriverTripDetails"
        android:layout_marginLeft="6sp"
        android:layout_marginTop="14sp"
        android:background="@drawable/my_button_gray"
        android:text="From"
        android:textColor="#ffff"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/EndLoctn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/startLoctn"
        android:layout_marginLeft="6sp"
        android:layout_marginTop="14sp"
        android:background="@drawable/my_button_gray"
        android:text="To"
        android:textColor="#ffff"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/EndLoctn"
        android:layout_marginLeft="6sp"
        android:layout_marginTop="14sp"
        android:background="@drawable/my_button_gray"
        android:text="Date"
        android:textColor="#ffff"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/StartTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Date"
        android:layout_marginLeft="6sp"
        android:layout_marginTop="14sp"
        android:background="@drawable/my_button_gray"
        android:text="Start Time"
        android:textColor="#ffff"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/EndTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/StartTime"
        android:layout_marginLeft="6sp"
        android:layout_marginTop="14sp"
        android:background="@drawable/my_button_gray"
        android:text="End Time"
        android:textColor="#ffff"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Seats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/EndTime"
        android:layout_marginLeft="6sp"
        android:layout_marginTop="14sp"
        android:background="@drawable/my_button_gray"
        android:text="Seats"
        android:textColor="#ffff"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Fare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Seats"
        android:layout_marginLeft="6sp"
        android:layout_marginTop="14sp"
        android:background="@drawable/my_button_gray"
        android:text="Fare"
        android:textColor="#ffff"
        android:textSize="30sp"
        android:textStyle="bold" />


</RelativeLayout>